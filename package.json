{
  "name": "yakshaver",
  "productName": "YakShaver",
  "version": "0.6.0",
  "description": "YakShaver, an AI agent to help you trim the fluff and get straight to the point",
  "main": "dist/index.js",
  "build": {},
  "scripts": {
    "setup": "concurrently \"npm install\"  \"cd src/ui && npm install\"",
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "concurrently \"cd src/ui && npm run dev\" \"wait-on http://localhost:3000 && npm run build && cross-env NODE_ENV=development electron .\"",
    "package": "npm run build && cd src/ui && npm run build && cd ../.. && electron-builder --dir",
    "make": "npm run build && cd src/ui && npm run build && cd ../.. && electron-builder --config electron-builder.config.js",
    "publish": "npm run build && cd src/ui && npm run build && cd ../.. && electron-builder --publish always --config electron-builder.config.js",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [],
  "author": {
    "name": "SSW"
  },
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/SSWConsulting/SSW.YakShaver.Desktop.git"
  },
  "dependencies": {
    "@ai-sdk/deepseek": "^2.0.4",
    "@ai-sdk/mcp": "^1.0.2",
    "@ai-sdk/openai": "^3.0.2",
    "@azure/msal-node": "^3.8.4",
    "@azure/openai": "^2.0.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "ai": "^6.0.3",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.5",
    "get-port": "^7.1.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^169.0.0",
    "isomorphic-fetch": "^3.0.0",
    "json-schema-to-zod": "^2.6.1",
    "openai": "^6.15.0",
    "tmp": "^0.2.5",
    "youtube-dl-exec": "^3.0.28"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@electron/fuses": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/tmp": "^0.2.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  }
}
