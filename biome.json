{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

  "assist": {
    "enabled": true,
    "actions": { "source": { "organizeImports": "on" } }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/ui/node_modules",
      "!**/ui/dist",
      "!**/ui/build",
      "!**/components/ui",
      "!**/ui/vite.config.mts"
    ]
  }
}
